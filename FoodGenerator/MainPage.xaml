<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:converters="clr-namespace:FoodGenerator.Converters"
             xmlns:viewmodel="clr-namespace:FoodGenerator.ViewModels"
             x:Class="FoodGenerator.MainPage"
             BackgroundColor="#FFF9F2"
             Title="Main Page">

    <ContentPage.BindingContext>
        <viewmodel:MainViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NutrientToChartConverter x:Key="NutrientToChartConverter" />

            <Style TargetType="Label" x:Key="NutrientLabel">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="#333333" />
                <Setter Property="FontFamily" Value="ChildishRegular" />
            </Style>

            <Style TargetType="Button" x:Key="PlayfulButton">
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Padding" Value="24,12" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.95" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Replace CollectionView with FlexLayout -->
        <FlexLayout Grid.Row="0"
                BindableLayout.ItemsSource="{Binding FoodItems}"
                Wrap="Wrap"
                JustifyContent="Start"
                AlignItems="Start"
                Direction="Row"
                Margin="5,5">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="0" 
                       Margin="8" 
                       CornerRadius="24"
                       HasShadow="True"
                       BackgroundColor="Transparent"
                       WidthRequest="300">
                        <!-- Set the desired width for each frame -->
                        <Frame CornerRadius="24"
                           BackgroundColor="White"
                           Padding="0">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#76b5c5" Offset="0.1"/>
                                    <GradientStop Color="#FF7F50" Offset="0.9"/>
                                </LinearGradientBrush>
                            </Frame.Background>

                            <Grid Padding="20" RowSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,*,*">
                                
                                <microcharts:ChartView Grid.Row="0" HeightRequest="100" 
                              WidthRequest="100"
                              HorizontalOptions="Center"
                              BackgroundColor="Transparent">
                                    <microcharts:ChartView.Chart>
                                        <Binding Path="." Converter="{StaticResource NutrientToChartConverter}"/>
                                    </microcharts:ChartView.Chart>
                                </microcharts:ChartView>
                                <!-- Centered Food Name -->
                                <Label Text="{Binding Name}"
                                    Grid.Row="0"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    TextColor="#333333"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    BackgroundColor="Transparent"/>
                                <Button Text="×"
                                              Grid.Column="2"
                                              BackgroundColor="#FF4757"
                                              HorizontalOptions="End"
                                              VerticalOptions="Start"
                                              WidthRequest="32"
                                              HeightRequest="32"
                                              CornerRadius="16"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteFoodCommand}"
                                              CommandParameter="{Binding .}"/>
                                </Grid>
                                <!-- Nutrient Blocks -->
                                <Grid Grid.Row="1" 
                                  ColumnDefinitions="*,*,*"
                                  ColumnSpacing="15">
                                    <!-- Fats Block -->
                                    <Frame CornerRadius="16"
                                       BackgroundColor="#FF9F43"
                                       Padding="15">
                                        <VerticalStackLayout Spacing="8">
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="🥑" FontSize="24"/>                                                
                                            </HorizontalStackLayout>
                                            <Label Text="{Binding Fats.Total, StringFormat='{0:F2}g'}" 
                                               FontSize="12"
                                               TextColor="White"
                                               FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <!-- Proteins Block -->
                                    <Frame Grid.Column="1"
                                       CornerRadius="16"
                                       BackgroundColor="#6C5CE7"
                                       Padding="15">
                                        <VerticalStackLayout Spacing="8">
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="🍗" FontSize="24"/>                                                
                                            </HorizontalStackLayout>
                                            <Label Text="{Binding Proteins.Total, StringFormat='{0:F2}g'}" 
                                               FontSize="12"
                                               TextColor="White"
                                               FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <!-- Carbs Block -->
                                    <Frame Grid.Column="2"
                                       CornerRadius="16"
                                       BackgroundColor="#00B894"
                                       Padding="15">
                                        <VerticalStackLayout Spacing="8">
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="🍞" FontSize="24"/>                                                
                                            </HorizontalStackLayout>
                                            <Label Text="{Binding Carbohydrates.Total, StringFormat='{0:F2}g'}" 
                                               FontSize="12"
                                               TextColor="White"
                                               FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Frame>
                                </Grid>

                                <!-- Details Section -->
                                <Grid Grid.Row="2" 
                                  ColumnDefinitions="*,*"
                                  ColumnSpacing="15"
                                  Margin="0,15,0,0">
                                    <!-- Left Column -->
                                    <VerticalStackLayout Spacing="10">
                                        <!-- Omega-3 -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                            <Label Text="🐟" FontSize="16" VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="Omega-3" 
                                                   FontSize="12"
                                                   TextColor="#666666"
                                                   FontAttributes="Bold"/>
                                                <Label Text="{Binding Fats.Omega3, StringFormat='{0:F2}g'}" 
                                                   FontSize="14"
                                                   TextColor="#444444"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Omega-6 -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                            <Label Text="🌻" FontSize="16" VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="Omega-6" 
                                                   FontSize="12"
                                                   TextColor="#666666"
                                                   FontAttributes="Bold"/>
                                                <Label Text="{Binding Fats.Omega6, StringFormat='{0:F2}g'}" 
                                                   FontSize="14"
                                                   TextColor="#444444"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>

                                    <!-- Right Column -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="10">
                                        <!-- Fiber -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                            <Label Text="🥦" FontSize="16" VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="Fiber" 
                                                   FontSize="12"
                                                   TextColor="#666666"
                                                   FontAttributes="Bold"/>
                                                <Label Text="{Binding Carbohydrates.Fiber, StringFormat='{0:F2}g'}" 
                                                   FontSize="14"
                                                   TextColor="#444444"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Sugar -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                            <Label Text="🍭" FontSize="16" VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="Sugar" 
                                                   FontSize="12"
                                                   TextColor="#666666"
                                                   FontAttributes="Bold"/>
                                                <Label Text="{Binding Carbohydrates.Sugar, StringFormat='{0:F2}g'}" 
                                                   FontSize="14"
                                                   TextColor="#444444"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>
                            </Grid>
                        </Frame>
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>

        <!-- Add Button -->
        <Button Grid.Row="1"
            Text="➕ Add Food"
            Style="{StaticResource PlayfulButton}"
            Margin="20"
            BackgroundColor="#6C5CE7"
            HorizontalOptions="End"
            Clicked="OnAddClicked">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#A363F9" Offset="0.1"/>
                    <GradientStop Color="#6C5CE7" Offset="0.9"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</ContentPage>