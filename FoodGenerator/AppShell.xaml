<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FoodGenerator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FoodGenerator"    
    Shell.FlyoutBehavior="Disabled"
    Title="FoodGenerator">

    <TabBar>
        <Tab Title="Food"
             Icon="food_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Storage"
             Icon="storage_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:StoragePage}" />
        </Tab>
        <Tab Title="Recipes"
             Icon="recipes_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:RecipePage}" />
        </Tab>
    </TabBar>

</Shell>
